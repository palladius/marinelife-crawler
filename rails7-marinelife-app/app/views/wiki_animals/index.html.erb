<h1>Wiki animal</h1>

<table class='table'>
  <thead>
    <th>Name</th>
    <th>Latin</th>
    <th>Title</th>
    <th>Wiki url</th>
    <th>Short taxo</th>
    <th>Wiki description</th>
    <th>Internal description</th>
    <th>Version</th>
    
    <th colspan=3>Actions</th>
  </thead>
  <tbody>
    <% @wiki_animals.each do |wiki_animal| %>
      <tr>
        <td><%= wiki_animal.name %></td>
        <td><%= wiki_animal.latin %></td>
        <td><%= wiki_animal.title %></td>
        <td><%= wiki_animal.wiki_url %></td>
        <td><%= wiki_animal.short_taxo %></td>
        <td><%= wiki_animal.wiki_description %></td>
        <td><%= wiki_animal.internal_description %></td>
        <td><%= wiki_animal.version %></td>
      
        <td><%= link_to "Show", wiki_animal_path(wiki_animal) %></td>
        <td><%= link_to "Edit", edit_wiki_animal_path(wiki_animal) %></td>
        <td>
          <%= link_to "Delete", wiki_animal_path(wiki_animal),
            "data-turbo-method": :delete,
            "data-turbo-confirm": "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New wiki animal", new_wiki_animal_path %>