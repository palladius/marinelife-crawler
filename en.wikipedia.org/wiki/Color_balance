                <mtd>
                  <msub>
                    <mi>L</mi>
                    <mrow class="MJX-TeXAtom-ORD">
                      <msup>
                        <mi>R</mi>
                        <mo>&#x2032;</mo>
                      </msup>
                    </mrow>
                  </msub>
                </mtd>
              </mtr>
              <mtr>
                <mtd>
                  <msub>
                    <mi>L</mi>
                    <mrow class="MJX-TeXAtom-ORD">
                      <msup>
                        <mi>G</mi>
                        <mo>&#x2032;</mo>
                      </msup>
                    </mrow>
                  </msub>
                </mtd>
              </mtr>
              <mtr>
                <mtd>
                  <msub>
                    <mi>L</mi>
                    <mrow class="MJX-TeXAtom-ORD">
                      <msup>
                        <mi>B</mi>
